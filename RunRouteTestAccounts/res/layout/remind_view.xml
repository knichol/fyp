<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7EAC8"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/ListViewReminder"
        android:layout_width="fill_parent"
        android:layout_height="399dp"
        android:layout_above="@+id/btnCurrRemindBack"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btnCurrRemindBack"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="#28ABE3"
        android:text="Back"
        android:textColor="#F7EAC8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLinkNewReminder"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btnCurrRemindBack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="#28ABE3"
        android:text="New Reminder"
        android:textColor="#F7EAC8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Current Reminders"
        android:textColor="#28ABE3"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>