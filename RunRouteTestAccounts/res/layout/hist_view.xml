<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EAC8"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/complete_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Metrics History"
        android:textColor="#28ABE3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnHistBack"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="#28ABE3"
        android:text="Back"
        android:textColor="#F7EAC8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ListViewHist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnHistBack"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/complete_by"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp" >
    </ListView>

    <Button
        android:id="@+id/btnHistUpd"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/btnHistBack"
        android:layout_alignBottom="@+id/btnHistBack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="#28ABE3"
        android:text="Update Metrics"
        android:textColor="#F7EAC8"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>